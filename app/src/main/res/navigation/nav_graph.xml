<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/characterFragment">

    <fragment
        android:id="@+id/characterFragment"
        android:name="com.example.soskarikcyandmorty.ui.fragments.character.CharacterFragment"
        android:label="RickyAndMorty"
        tools:layout="@layout/fragment_character">
        <action
            android:id="@+id/action_characterFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment" />
        <action
            android:id="@+id/action_characterFragment_to_noConnectFragment"
            app:destination="@id/noConnectFragment" />
        <action
            android:id="@+id/action_characterFragment_to_dialogFragment"
            app:destination="@id/dialogFragment" />
        <action
            android:id="@+id/action_characterFragment_to_characterDialogFragment"
            app:destination="@id/characterDialogFragment" />
        <argument
            android:name="status"
            android:defaultValue=""
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="gender"
            android:defaultValue=""
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/episodeFragment"
        android:name="com.example.soskarikcyandmorty.ui.fragments.episode.EpisodeFragment"
        android:label="RickyAndMorty"
        tools:layout="@layout/fragment_episode">
        <action
            android:id="@+id/action_episodeFragment_to_episodeDetailFragment"
            app:destination="@id/episodeDetailFragment" />
        <action
            android:id="@+id/action_episodeFragment_to_episodeDialogFragment"
            app:destination="@id/episodeDialogFragment" />
        <argument
            android:name="name"
            app:nullable="true"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="episode"
            app:nullable="true"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/locationFragment"
        android:name="com.example.soskarikcyandmorty.ui.fragments.location.LocationFragment"
        android:label="RickyAndMorty"
        tools:layout="@layout/fragment_location">
        <action
            android:id="@+id/action_locationFragment_to_locationDetailFragment"
            app:destination="@id/locationDetailFragment" />
        <argument
            android:name="type"
            android:defaultValue=""
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="dimension"
            android:defaultValue=""
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_locationFragment_to_locationDialogFragment"
            app:destination="@id/locationDialogFragment" />
    </fragment>

    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="com.example.soskarikcyandmorty.ui.fragments.character.deatil.CharacterDetailFragment"
        android:label="{label}"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="id"
            android:defaultValue="1"
            app:argType="integer" />
        <argument
            android:name="label"
            android:defaultValue="Rick"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/noConnectFragment"
        android:name="com.example.soskarikcyandmorty.ui.fragments.noconnect.NoConnectFragment"
        android:label="fragment_no_connect"
        tools:layout="@layout/fragment_no_connect" />
    <dialog
        android:id="@+id/dialogFragment"
        android:name="com.example.soskarikcyandmorty.ui.fragments.character.dialog.DialogFragment"
        android:label="fragment_dialog_fragment"
        tools:layout="@layout/fragment_dialog_fragment">
        <argument
            android:name="image"
            app:argType="string" />
    </dialog>
    <fragment
        android:id="@+id/filterFragment"
        android:name="com.example.soskarikcyandmorty.ui.fragments.filter.FilterFragment"
        android:label="RickyAndMorty"
        tools:layout="@layout/fragment_filter" >
        <action
            android:id="@+id/action_filterFragment_to_episodeDetailFragment"
            app:destination="@id/episodeDetailFragment" />
        <action
            android:id="@+id/action_filterFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment" />
        <action
            android:id="@+id/action_filterFragment_to_locationDetailFragment"
            app:destination="@id/locationDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/episodeDetailFragment"
        android:name="com.example.soskarikcyandmorty.ui.fragments.episode.detail.EpisodeDetailFragment"
        android:label="{label}"
        tools:layout="@layout/fragment_episode_detail">
        <argument
            android:name="id"
            app:argType="integer" />

        <argument
            android:name="label"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/locationDetailFragment"
        android:name="com.example.soskarikcyandmorty.ui.fragments.location.detail.LocationDetailFragment"
        android:label="{label}"
        tools:layout="@layout/fragment_location_detail">
        <argument
            android:name="id"
            app:argType="integer" />
        <argument
            android:name="label"
            app:argType="string" />
    </fragment>
    <dialog
        android:id="@+id/characterDialogFragment"
        android:name="com.example.soskarikcyandmorty.ui.fragments.character.dialog.CharacterDialogFragment"
        android:label="fragment_character_dialog"
        tools:layout="@layout/fragment_character_dialog">
        <action
            android:id="@+id/action_characterDialogFragment_to_characterFragment"
            app:destination="@id/characterFragment" />
    </dialog>
    <dialog
        android:id="@+id/locationDialogFragment"
        android:name="com.example.soskarikcyandmorty.ui.fragments.location.dialog.LocationDialogFragment"
        android:label="fragment_location_dilaog"
        tools:layout="@layout/fragment_location_dilaog">
        <action
            android:id="@+id/action_locationDialogFragment_to_locationFragment"
            app:destination="@id/locationFragment" />
    </dialog>
    <dialog
        android:id="@+id/episodeDialogFragment"
        android:name="com.example.soskarikcyandmorty.ui.fragments.episode.dialog.EpisodeDialogFragment"
        android:label="fragment_episode_dialog"
        tools:layout="@layout/fragment_episode_dialog" >
        <action
            android:id="@+id/action_episodeDialogFragment_to_episodeFragment"
            app:destination="@id/episodeFragment" />
    </dialog>
</navigation>